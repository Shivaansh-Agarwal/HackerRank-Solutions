/*
  JAVA SOLUTION
  First I converted the given string into an Array by using the method toCharArray()
  Then I started a loop from first element of array to last
  To calculate the length of string I used the method length()
  Now in the loop i checked whether the character is in small case or large
  Then counted the no of large case letters in the string
  Then just returned the count+1
*/
import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    static int camelcase(String s) {
        //First i need to find the case of a character in a String
        int i=0,count=0;
        char[] str = s.toCharArray();   //This method will convert the string into an array of equal length
        int len = s.length();           //This method will calculate the length of string
        for(i=0;i<len;i++){
            if(str[i]>='a' && str[i]<='z')
                continue;
            else if(str[i]>='A' && str[i]<='Z')
                count++;
        }
        return (count+1);
    }

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        String s = in.next();
        int result = camelcase(s);
        System.out.println(result);
        in.close();
    }
}
